:root {
  --color-transparent: #ffffff00;
  --color-shadow: #0000002d;
  --color-overlay: #f8f8f8c5;
  --color-glass: #ffffff4b;
  --color-background: #ffffff;
  --color-highlight: #c8c8c877;
  --color-highlight-active: #b4b4b4ce;
  --color-element: #e4e4e4;
  --color-element-transparent: #e4e4e400;

  --color-accent-0: #cf2443;
  --color-accent-50: #bd2020;
  --color-accent-75: #dd1d30;

  --color-text-normal: #000000;
  --color-text-selected: #7e7e7e;
  --color-text-caption: #929292;
  --color-text-contrast: #f8f8f8;

  --font-large: 33px;
  --font-normal: 18px;
  --font-little: 16px;
  --font-tiny: 14px;
  --font-caption: 10px;

  --view-height: 100vh;
}

@media (prefers-color-scheme: dark) {
  :root {
    --color-transparent: #00000000;
    --color-shadow: #00000085;
    --color-overlay: #181818c4;
    --color-glass: #0000003b;
    --color-background: #000000;
    --color-highlight: #3131315b;
    --color-highlight-active: #313131d5;
    --color-element: #1c1c1c;
    --color-element-transparent: #1c1c1c00;

    --color-accent-0: #901518;

    --color-text-normal: #fdfdfd;
    --color-text-selected: #b6b6b6;
    --color-text-caption: #858585;
    --color-text-contrast: #131313;
  }
}

* {
  -webkit-touch-callout: none;
  -webkit-tap-highlight-color: transparent;
  color: var(--color-text-normal);
  background: transparent;
}

html,
body {
  position: relative;
  width: 100vw;
  height: 100vh;
  margin: 0;
  overscroll-behavior-y: none;
  position: fixed;
  overflow: hidden;

  font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
  background-color: var(--color-background);
  user-select: none;

  &::-webkit-scrollbar {
    display: none;
  }
}

body.standalone {
  padding-top: 31px;
}

button,
a,
input {
  font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
  font-size: var(--font-normal);
  text-decoration: none;
  border: none;
  cursor: pointer;
  touch-action: manipulation;
  user-select: none;
  outline: none;
  padding: 0;
  margin: 0;
}

input[type="text"] {
  cursor: text;
  background-color: var(--color-element);
  user-select: auto;

  font-size: var(--font-normal);
  border-radius: 10px;
}
